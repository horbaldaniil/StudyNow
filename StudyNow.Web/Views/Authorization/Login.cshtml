@model StudyNow.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<div class="login--section">
    <form asp-action="Login" method="post" class="inner">
        <img src="/icons/logo.svg" />
        <h3>Увійти в аккаунт</h3>
        <div class="form--block">
            <label asp-for="Email">Пошта</label>
            <input asp-for="Email" type="email" placeholder="your@mail.com" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form--block">
            <label asp-for ="Password">Пароль</label>
            <input asp-for="Password" type="password" placeholder="yourpassword" />
            <span asp-validation-for="Password"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit">Login</button>
        <a class="signup" asp-action="Register">Зареєстуватися</a>
    </form>
</div>