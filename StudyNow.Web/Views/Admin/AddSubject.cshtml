@model StudyNow.Web.Models.SubjectViewModel

@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Навчальні предмети";
}

<div class="title">
    <h2>Додати навчальний предмет</h2>
</div>

<div class="add-subject-admin--section add-edit--section">
    <form asp-action="AddSubject" method="post" class="inner">
        <div class="form--block">
            <label asp-for="Name">Назва<span class="required">*</span></label>
            <input asp-for="Name" type="text" placeholder="Назва" class="input" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form--block">
            <label asp-for="Description">Опис<span class="required">*</span></label>
            <textarea asp-for="Description" type="text" placeholder="Опис" class="input" ></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="button button-orange" type="submit">Додати</button>
    </form>
</div>