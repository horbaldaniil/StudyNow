@model StudyNow.Web.Models.LessonViewModel

@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Групи";
}

<div class="title">
    <h2>Додати заняття</h2>
</div>

<div class="add-edit--section">
    <form asp-action="AddLesson" method="post" class="inner">
        <div class="form--block">
            <label asp-for="SubjectId">Навчальний предмет<span class="required">*</span></label>
            <select asp-for="SubjectId" class="select">
                <option disabled hidden selected value="null"> -- Виберіть предмет -- </option>
                @foreach (var subject in Model.Subjects)
                {
                    <option value="@subject.SubjectId">@subject.Name</option>
                }
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>
        <div class="form--list" style="display: flex; gap: 50px;">
            <div class="form--block">
                <label asp-for="Location">Місце проведення</label>
                <input asp-for="Location" class="input" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form--block">
                <label asp-for="Link">Посилання</label>
                <input asp-for="Link" class="input" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
        <div class="form--block">
            <label asp-for="LessonTime">Дата проведення<span class="required">*</span></label>
            <input asp-for="LessonTime" type="datetime-local" class="input" value="@Model.LessonTime.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="LessonTime" class="text-danger"></span>
        </div>
        <div class="form--block">
            <label asp-for="Description">Опис</label>
            <input asp-for="Description" class="input" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form--block">
            <label asp-for="TeacherName">Ім’я викладача<span class="required">*</span></label>
            <input asp-for="TeacherName" class="input" />
            <span asp-validation-for="TeacherName" class="text-danger"></span>
        </div>
        <div class="form--block">
            <label asp-for="GroupId">Група<span class="required">*</span></label>
            <select asp-for="GroupId" class="select">
                <option disabled hidden selected value="null"> -- Виберіть групу -- </option>
                @foreach (var group in Model.Groups)
                {
                    <option value="@group.GroupId">@group.Name</option>
                }
            </select>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit" class="button button-orange">Додати</button>
    </form>
</div>