@model StudyNow.Web.Models.GroupViewModel

@{
    Layout = "_LayoutMenu";
    ViewData["Title"] = "Групи";
}

<div class="title">
    <h2>Змінити групу</h2>
</div>

<div class="add-edit--section">
    <form asp-action="EditGroup" method="post" class="inner">
        <input type="hidden" asp-for="GroupId" />
        <div class="form--block">
            <label asp-for="Name">Назва<span class="required">*</span></label>
            <input asp-for="Name" type="text" placeholder="Назва" class="input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="button button-orange">Зберегти</button>
    </form>
</div>